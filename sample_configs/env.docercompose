# MemMachine Docker Compose Environment Configuration
# Copy this file to .env and update the values according to your setup

# =============================================================================
# Docker Images Configuration
# =============================================================================
DOCKER_MIDDLEWARE_IMG=ghcr.io/memmachine/middleware:latest
DOCKER_FRONTEND_IMG=ghcr.io/memmachine/frontend:latest
DOCKER_MEMMACHINE_IMG=ghcr.io/memmachine/memmachine:latest

# =============================================================================
# PostgreSQL/pgvector Database Configuration
# =============================================================================
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_USER=memmachine
POSTGRES_PASS=memmachine_password
POSTGRES_PASSWORD=memmachine_password
POSTGRES_DB=memmachine

# =============================================================================
# Neo4j Database Configuration
# =============================================================================
NEO4J_HOST=neo4j
NEO4J_PORT=7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=neo4j_password
NEO4J_HTTP_PORT=7474
NEO4J_HTTPS_PORT=7473
NEO4J_HEAP_INIT=8G
NEO4J_HEAP_MAX=12G
# =============================================================================
# MemMachine Application Configuration
# =============================================================================
MEMORY_CONFIG=/etc/memmachine/configuration.yml
MCP_BASE_URL=http://memmachine:8080
GATEWAY_URL=http://localhost:8080
FAST_MCP_LOG_LEVEL=INFO

# =============================================================================
# OpenAI API Configuration (Required for embeddings and LLM)
# =============================================================================
OPENAI_API_KEY=your_openai_api_key_here

# =============================================================================
# Google OAuth Configuration (if applicable)
# =============================================================================
ENABLE_OAUTH_SIGNUP=false ## Set to true to allow new user signups via OAuth
OPENID_PROVIDER_URL=https://accounts.google.com/o/oauth2/auth
GOOGLE_CLIENT_ID=<google_client_id>
GOOGLE_CLIENT_SECRET=<google_client_secret>
GOOGLE_REDIRECT_URI=https://playground.memmachine.ai/oauth/google/callback
WEBUI_URL=https://playground.memmachine.ai

# =============================================================================
# Optional: Additional Configuration
# =============================================================================
# Logging level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# MemMachine server port
MEMORY_SERVER_PORT=8080

# Database connection pool settings
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
